<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvItemHomeLoadingPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:elevation="8dp"
        app:cardUseCompatPadding="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clItemHomeLoadingPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvItemTitleCardHomeLoadingPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Pedido:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLoadingNumberPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="#00001"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvItemTitleCardHomeLoading"
                app:layout_constraintStart_toEndOf="@+id/tvItemTitleCardHomeLoadingPedido"
                app:layout_constraintTop_toTopOf="@+id/tvItemTitleCardHomeLoadingPedido" />

            <TextView
                android:id="@+id/tvLoadingDatePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Data retirada: 20/12/2020"
                android:textColor="@color/cinza_676767"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemTitleCardHomeLoadingPedido" />

            <ImageView
                android:id="@+id/ivStatusLoadingPedido"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circle_orange"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvLoadingNumber"
                app:layout_constraintEnd_toStartOf="@+id/tvStatusTextPedido"
                app:layout_constraintTop_toTopOf="@+id/tvLoadingNumberPedido" />

            <TextView
                android:id="@+id/tvStatusTextPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="A caminho"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivStatusLoading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivStatusLoadingPedido" />

            <TextView
                android:id="@+id/tvLoadingDeliveryPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Data entrega: 20/12/2020"
                android:textColor="@color/cinza_676767"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvLoadingDatePedido"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvLoadingDatePedido" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>